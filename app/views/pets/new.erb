<h1>Create a new Pet</h1>


<form action="/pets" method="POST">
  <label>Pet Name:</label>
<br></br/>
  <input type="text" name="pet_name" id="pet_name">
<br></br/>
  <label>Choose and existing Owner:</label>
<br></br/>
  <% @owners.each do |owner| %>
    <input type="checkbox" id="<%= owner.id %>" value="<%= owner.id %>" name="owner[id]"><%= owner.name %></input>
  <% end %>
  <br />
  <label>And or create new owner</label>
  <br  />
  <label for="owner_name">Name:</label>
  <input id="owner_name" name="owner[name]" type="text" />
  <br />
  <input type="submit" value="Create Pet" />
</form>
